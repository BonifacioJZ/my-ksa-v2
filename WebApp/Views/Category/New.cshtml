@model WebApp.Dto.Category.CategoryInDto
@{
    ViewData["Title"] = "Categorias";
}

<h1>@ViewData["Title"]</h1>
@if(TempData["Error_data"]!= null){
    <div class="m-0 pt-2 row justify-content-center align-items-center">
        <div class="col-auto p-1 text-center">
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @TempData["Error_data"]
            </div>
        </div>
    </div>
    }
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Store">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" required for="name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" for="description" aria-required="false" class="control-label">Descripcion</label>
                <textarea asp-for="Description" class="form-control"  rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary">
                <a class="btn" asp-controller="category" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}